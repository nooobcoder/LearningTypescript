{
	"compilerOptions": {
		"target": "es5",
		"module": "es6",
		// "lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"experimentalDecorators": true,
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noEmit": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitReturns": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"noEmitOnError": true
	},
	"include": ["./src", "app.ts", "vite-env.d.ts"]
}
